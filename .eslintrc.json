{
  "extends": "next/core-web-vitals",
  "rules": {
    "@typescript-eslint/no-unused-vars": ["warn", { 
      "varsIgnorePattern": "^_", 
      "argsIgnorePattern": "^_" 
    }],
    "max-lines": ["warn", { 
      "max": 150, 
      "skipBlankLines": true, 
      "skipComments": true 
    }],
    "max-lines-per-function": ["warn", {
      "max": 100,
      "skipBlankLines": true,
      "skipComments": true
    }]
  }
} 